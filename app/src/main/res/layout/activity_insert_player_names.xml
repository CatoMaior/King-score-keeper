<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="firpo.pietro.kingscorekeeper.PlayerNames"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/Player1Label"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="Giocatore 1"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Player1Textb"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/Player2Label"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="Giocatore 2"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Player2Textb"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/Player3Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giocatore 4"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Player4Textb"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/Player4Label"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="Giocatore 3"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Player3Textb"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="Inserisci i nomi dei giocatori"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/Player1Textb"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/Player1Textb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/Player2Textb"
        android:layout_marginTop="64dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Player2Textb"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Player2Textb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/Player3Textb"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/Player1Textb"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Player3Textb" />

    <EditText
        android:id="@+id/Player3Textb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Player2Textb"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/Player4Label"
        android:layout_marginLeft="9dp" />

    <EditText
        android:id="@+id/Player4Textb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/Player3Textb"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/Player3Label"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/ForwardButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="Avanti"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/BackButton"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="Indietro"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
